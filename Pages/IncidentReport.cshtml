@page
@model DisasterAlleviationFoundation.Pages.IncidentReportModel
@{
    ViewData["Title"] = "Report a Disaster Incident";
}
<h1>@ViewData["Title"]</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="Incident.Location"></label>
        <input asp-for="Incident.Location" class="form-control" required />
        <span asp-validation-for="Incident.Location" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Incident.Description"></label>
        <textarea asp-for="Incident.Description" class="form-control" required></textarea>
        <span asp-validation-for="Incident.Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Incident.Date"></label>
        <input asp-for="Incident.Date" class="form-control" type="date" required />
        <span asp-validation-for="Incident.Date" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Incident.Severity"></label>
        <select asp-for="Incident.Severity" class="form-control">
            <option value="">Select Severity</option>
            <option value="Low">Low</option>
            <option value="Medium">Medium</option>
            <option value="High">High</option>
        </select>
        <span asp-validation-for="Incident.Severity" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
