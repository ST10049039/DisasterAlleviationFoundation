@page
@model DisasterAlleviationFoundation.Pages.IndexModel
@{
    ViewData["Title"] = "Welcome to the Disaster Alleviation Foundation";
}

<div class="welcome-container">
    <div class="welcome-text">
        <h1>Welcome to the <span>Disaster Alleviation Foundation</span></h1>
        <p>We are dedicated to helping those in need during disasters and emergencies.</p>
        <p>Join us in making a difference by reporting incidents, donating resources, or volunteering your time to help others.</p>
    </div>
    <div class="welcome-image">
        <img src="/img/foundation-logo.png" alt="Disaster Alleviation Foundation Logo" />
    </div>
</div>
